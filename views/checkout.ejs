                <div class="half_width input_container"><label class="field_name"></label>Postal code</label><input class="input" type="text" name="postal_code" id="postal_code" placeholder="postal_code"></div>
                <div class="half_width input_container"><label class="field_name"></label>Email</label><input class="input" type="text" name="email" id="email" placeholder="email"></div>
                <div class="half_width input_container"><label class="field_name"></label>Phone</label><input class="input" type="text" name="phone" id="phone" placeholder="phone"></div>
                
